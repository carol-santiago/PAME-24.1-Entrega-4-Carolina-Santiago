generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Funcionario {
  id Int @id @default(autoincrement())
  nome String
  email String
  senha String
}

model Cliente {
  id Int @id @default(autoincrement())
  nome String
  telefone String
  id_endereco Int @unique
  endereco Endereco? @relation(fields: [id_endereco], references: [id])
  pedidos Pedido[]
}

model Endereco {
  id Int @id @default(autoincrement())
  id_cliente Int
  cep String
  rua String
  numero String
  complemento String
  cliente Cliente? 
}

model Pedido {
  id Int @id @default(autoincrement())
  id_cliente Int
  data_pedido DateTime
  status_pedido String
  cliente Cliente @relation(fields: [id_cliente], references: [id])
  pedido_lasanhas Assoc_PedidoLasanha[]
}

model Lasanha {
  id Int @id @default(autoincrement())
  data_validade DateTime
  pedidos Assoc_PedidoLasanha[]
  lasanha_ingrediente Assoc_LasanhaIngrediente[]
}

model Assoc_PedidoLasanha {
  id Int @id @default(autoincrement())
  id_pedido Int
  id_lasanha Int
  pedidos Pedido @relation(fields: [id_pedido], references: [id])
  lasanhas Lasanha @relation(fields: [id_lasanha], references: [id])
  // quantidade Int
}

model Ingrediente {
  id Int @id @default(autoincrement())
  nome String
  qntd_receita Int
  qntd_estoque Int
  unidade String
  lasanha_ingrediente Assoc_LasanhaIngrediente[]
  encomenda_ingrediente Assoc_EncomendaIngrediente[]
}

model Assoc_LasanhaIngrediente {
  id Int @id @default(autoincrement())
  id_lasanha Int
  id_ingrediente Int
  lasanhas Lasanha @relation(fields: [id_lasanha], references: [id])
  ingredientes Ingrediente @relation(fields: [id_ingrediente], references: [id])
}

model Encomenda {
  id Int @id @default(autoincrement())
  data_encomenda DateTime
  status_encomenda String
  encomenda_ingrediente Assoc_EncomendaIngrediente[]
}

model Assoc_EncomendaIngrediente {
  id Int @id @default(autoincrement())
  id_encomenda Int
  id_ingrediente Int
  qntd_encomendada Int
  encomendas Encomenda @relation(fields: [id_encomenda], references: [id])
  ingredientes Ingrediente @relation(fields: [id_ingrediente], references: [id])
}

